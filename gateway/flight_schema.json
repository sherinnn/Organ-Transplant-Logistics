{
  "name": "track_flights",
  "description": "Fetch flights between two airports using FlightAPI, returning key flight details without booking links.",
  "input_schema": {
    "type": "object",
    "properties": {
      "api_key": { "type": "string" },
      "date": { "type": "string", "description": "Flight date in YYYYMMDD format" },
      "airport1": { "type": "string", "description": "Origin airport IATA code" },
      "airport2": { "type": "string", "description": "Destination airport IATA code" }
    },
    "required": ["api_key", "date", "airport1", "airport2"]
  },
  "output_schema": {
    "type": "object",
    "properties": {
      "top_flights": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "Airline": { "type": "string" },
            "FlightNumber": { "type": "string" },
            "DepartureTime": { "type": "string" },
            "ArrivalTime": { "type": "string" },
            "DurationMinutes": { "type": "number" }
          },
          "required": ["Airline", "FlightNumber", "DepartureTime", "ArrivalTime", "DurationMinutes"]
        }
      },
      "summary": { "type": "string" }
    },
    "required": ["top_flights"]
  }
}
